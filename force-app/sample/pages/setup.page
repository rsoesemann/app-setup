<apex:page controller="SetupPageCtrl" title="Migration to replace deprecated field" docType="html-5.0" sidebar="false" lightningStylesheets="true">

    <c:setup ctrl="{!controller}">

        <c:setupStep title="Migrate Supplier Field value" step="{!migrateStep}" rendered="true"/>

        <c:setupStep title="Migrate Local Dependencies" step="{!dependencyStep}" rendered="true">{!dependencyStep.dependencies}
            <apex:pageBlock title="Custom Field Metadata Dependencies">
                <apex:pageBlockSection title="Dependencies" columns="1">
                    <apex:pageBlockTable value="{!dependencyStep.dependencies}" var="dep">
                        <apex:column headerValue="Metadata Component Name">
                            <apex:outputText value="{!dep.MetadataComponentName}" />
                        </apex:column>
                        <apex:column headerValue="Metadata Component Type">
                            <apex:outputText value="{!dep.MetadataComponentType}" />
                        </apex:column>
                    </apex:pageBlockTable>
                </apex:pageBlockSection>
            </apex:pageBlock>
        </c:setupStep>
        
        <c:setupStep title="Remove Deprecated Field" step="{!removeStep}" rendered="true"/>

        <c:setupStep title="Third-Party Licenses (click for details)" collapsed="false">
            <div class="slds-setup-assistant__step-summary-content slds-media__body">
                This software uses the following open-source software. Their licenses require us to reproduce their copyright notice.
            </div>
            <ul>
                <li><a href="https://github.com/rsoesemann/app-setup/blob/master/LICENSE" target="_blank">rsoesemann/app-setup</a></li>
            </ul>
        </c:setupStep>
    </c:setup>

</apex:page>